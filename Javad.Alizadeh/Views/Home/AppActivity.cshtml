@model List<ActivityType>

@{
    ViewData["Title"] = "Activity";
}
<h1>@ViewData["Title"]</h1>

<a type="button" class="btn btn-secondary" asp-action="Create" asp-controller="Home">Create</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Code</th>
            <th scope="col">Register Date</th>
            <th scope="col">Is Active</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                @{
                    int Count = 0;
                    Count++;
                    <th scope="row">@Count</th>
                    <td>@item.Name</td>
                    <td>@item.Code</td>
                    <td>@item.CreatedTime</td>
                    @if (@item.IsActive == true)
                    {
                        <td>
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" checked disabled>

                            </div>
                        </td>
                    }
                    else
                    {
                        <td>
                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" disabled>

                        </td>
                    }
                    <td>
                        <a type="button" class="btn btn-secondary" asp-controller="Home" asp-action="Update" asp-route-id="@item.Id">Edit</a>
                        <a type="button" class="btn btn-secondary" asp-controller="Home" asp-action="Copy" asp-route-id="@item.Id">Copy</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-controller="Home" asp-route-id="@item.Id">Delete</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>
